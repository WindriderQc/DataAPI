# deploy.env.example
# Copy this file to deploy.env and customize with your values
# Then run: set -a; source deploy.env; set +a; sudo -E ./deploy_dataapi_mint.sh

# Server Configuration
SERVER_IP="192.168.2.33"

# TrueNAS Host Configuration
TRUENAS_HOST_IP="192.168.2.31"
ENABLE_SMB_MOUNTS="yes"              # yes/no
SMB_USER="your_smb_username"         # Required if ENABLE_SMB_MOUNTS=yes
SMB_PASS="your_smb_password"         # Required if ENABLE_SMB_MOUNTS=yes

# Repository Configuration
REPO_URL="https://github.com/WindriderQc/DataAPI.git"
APP_NAME="DataAPI"
APP_USER="dataapi"
APP_ROOT="/opt/servers"

# Application Configuration
PORT="3003"
NODE_ENV="production"

# Tool-server auth (AgentX -> DataAPI)
DATAAPI_API_KEY="change_me_long_random"

# n8n integration (inbound to DataAPI)
N8N_API_KEY="change_me_long_random"
N8N_LAN_ONLY="true"

# n8n webhook dispatch (outbound from DataAPI -> n8n)
N8N_WEBHOOK_BASE_URL="https://n8n.example.com/webhook"
N8N_WEBHOOK_GENERIC="change-me-webhook-id"

# MongoDB Configuration
MONGO_HOST="127.0.0.1"
MONGO_PORT="27017"
MONGO_DB_NAME="IoT"

# MQTT Configuration
MQTT_BROKER_URL="mqtt://localhost:1883"
MQTT_ISS_TOPIC="liveData/iss"
MQTT_USERNAME="dataapi"
MQTT_PASSWORD="your_secure_mqtt_password"    # CHANGE THIS!

# Nginx reverse proxy
ENABLE_NGINX="yes"                   # yes/no
