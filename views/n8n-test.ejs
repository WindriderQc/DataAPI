<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>n8n Webhook Tester - DataAPI</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            padding: 2rem 0;
        }
        .container {
            max-width: 800px;
        }
        .card {
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.2);
        }
        .btn-send {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: none;
            padding: 12px 30px;
            font-size: 16px;
        }
        .btn-send:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.3);
        }
        .response-box {
            background: #f8f9fa;
            border-radius: 10px;
            padding: 20px;
            margin-top: 20px;
            display: none;
        }
        .response-box.show {
            display: block;
            animation: slideIn 0.3s ease-out;
        }
        @keyframes slideIn {
            from {
                opacity: 0;
                transform: translateY(-10px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
        .success {
            color: #28a745;
        }
        .error {
            color: #dc3545;
        }
        .badge-custom {
            font-size: 0.9rem;
            padding: 0.5rem 1rem;
        }
        pre {
            background: #2d2d2d;
            color: #f8f8f2;
            padding: 15px;
            border-radius: 8px;
            overflow-x: auto;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h3 class="mb-0">
                    <i class="bi bi-webhook"></i> n8n Webhook Tester
                </h3>
                <small>Test webhooks and event triggers from DataAPI to n8n</small>
            </div>
            <div class="card-body">
                <!-- Webhook ID Input -->
                <div class="mb-4">
                    <label for="webhookId" class="form-label fw-bold">Webhook ID</label>
                    <input 
                        type="text" 
                        class="form-control" 
                        id="webhookId" 
                        placeholder="c1deca83-ecb4-48ad-b485-59195cee9a61"
                        value="c1deca83-ecb4-48ad-b485-59195cee9a61">
                    <small class="form-text text-muted">
                        Get this from your n8n webhook node URL
                    </small>
                </div>

                <!-- Test Type Selection -->
                <div class="mb-4">
                    <label class="form-label fw-bold">Test Type</label>
                    <div class="btn-group w-100" role="group">
                        <input type="radio" class="btn-check" name="testType" id="typeCustom" value="custom" checked>
                        <label class="btn btn-outline-primary" for="typeCustom">Custom Payload</label>

                        <input type="radio" class="btn-check" name="testType" id="typeScan" value="scan">
                        <label class="btn btn-outline-primary" for="typeScan">Scan Complete</label>

                        <input type="radio" class="btn-check" name="testType" id="typeExport" value="export">
                        <label class="btn btn-outline-primary" for="typeExport">Files Exported</label>

                        <input type="radio" class="btn-check" name="testType" id="typeAlert" value="alert">
                        <label class="btn btn-outline-primary" for="typeAlert">Storage Alert</label>
                    </div>
                </div>

                <!-- Message Input -->
                <div class="mb-4">
                    <label for="message" class="form-label fw-bold">Test Message</label>
                    <textarea 
                        class="form-control font-monospace" 
                        id="message" 
                        rows="8"
                        placeholder='{"message": "Hello from DataAPI!"}'></textarea>
                    <small class="form-text text-muted">
                        Enter JSON payload to send to n8n
                    </small>
                </div>

                <!-- Send Button -->
                <div class="d-grid gap-2">
                    <button class="btn btn-primary btn-send" id="sendBtn" onclick="sendWebhook()">
                        <span id="btnText">ðŸš€ Send to n8n</span>
                        <span id="btnSpinner" class="spinner-border spinner-border-sm d-none" role="status"></span>
                    </button>
                </div>

                <!-- Response Box -->
                <div class="response-box" id="responseBox">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h5 class="mb-0" id="responseTitle">Response</h5>
                        <span class="badge badge-custom" id="statusBadge"></span>
                    </div>
                    <div id="responseContent"></div>
                </div>
            </div>
        </div>

        <!-- Quick Examples -->
        <div class="card mt-4">
            <div class="card-header bg-secondary text-white">
                <h5 class="mb-0">Quick Examples</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <button class="btn btn-sm btn-outline-secondary w-100" onclick="loadExample('simple')">
                            Simple Message
                        </button>
                    </div>
                    <div class="col-md-6 mb-3">
                        <button class="btn btn-sm btn-outline-secondary w-100" onclick="loadExample('scan')">
                            Scan Complete
                        </button>
                    </div>
                    <div class="col-md-6 mb-3">
                        <button class="btn btn-sm btn-outline-secondary w-100" onclick="loadExample('export')">
                            File Export
                        </button>
                    </div>
                    <div class="col-md-6 mb-3">
                        <button class="btn btn-sm btn-outline-secondary w-100" onclick="loadExample('alert')">
                            Storage Alert
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        const examples = {
            simple: {
                chatInput: 'Hello from DataAPI test UI!',
                test: true,
                timestamp: new Date().toISOString()
            },
            scan: {
                chatInput: 'NAS scan completed successfully with 1523 files found',
                event: 'nas_scan_complete',
                scan: {
                    scanId: 'test-' + Date.now(),
                    status: 'complete',
                    filesFound: 1523,
                    upserts: 1500,
                    errors: 0,
                    duration: 45000,
                    roots: ['/mnt/nas/videos']
                },
                timestamp: new Date().toISOString(),
                source: 'dataapi-test-ui'
            },
            export: {
                chatInput: 'File export completed: 1000 files exported',
                event: 'files_exported',
                export: {
                    exportId: 'export-test-' + Date.now(),
                    type: 'full',
                    fileCount: 1000,
                    fileSize: 5242880000,
                    path: '/exports/test-report.csv'
                },
                timestamp: new Date().toISOString(),
                source: 'dataapi-test-ui'
            },
            alert: {
                chatInput: 'Storage alert: Disk usage at 85% on /mnt/nas',
                event: 'storage_alert',
                alert: {
                    type: 'disk_full',
                    severity: 'warning',
                    currentUsage: 85,
                    threshold: 80,
                    path: '/mnt/nas'
                },
                timestamp: new Date().toISOString(),
                source: 'dataapi-test-ui'
            }
        };

        // Load example
        function loadExample(type) {
            const messageBox = document.getElementById('message');
            messageBox.value = JSON.stringify(examples[type], null, 2);
        }

        // Update message based on test type
        document.querySelectorAll('input[name="testType"]').forEach(radio => {
            radio.addEventListener('change', (e) => {
                const type = e.target.value;
                if (type !== 'custom') {
                    loadExample(type);
                } else {
                    document.getElementById('message').value = JSON.stringify(examples.simple, null, 2);
                }
            });
        });

        // Initialize with simple example
        loadExample('simple');

        // Send webhook
        async function sendWebhook() {
            const webhookId = document.getElementById('webhookId').value.trim();
            const messageText = document.getElementById('message').value.trim();
            const sendBtn = document.getElementById('sendBtn');
            const btnText = document.getElementById('btnText');
            const btnSpinner = document.getElementById('btnSpinner');
            const responseBox = document.getElementById('responseBox');
            
            // Validate inputs
            if (!webhookId) {
                showResponse('Error', 'Please enter a webhook ID', 'error');
                return;
            }

            let payload;
            try {
                payload = JSON.parse(messageText);
            } catch (e) {
                showResponse('Invalid JSON', e.message, 'error');
                return;
            }

            // Show loading state
            sendBtn.disabled = true;
            btnText.classList.add('d-none');
            btnSpinner.classList.remove('d-none');

            try {
                const response = await fetch(`/api/v1/n8n/trigger/${webhookId}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'x-api-key': '<%= process.env.N8N_API_KEY || "" %>'
                    },
                    body: JSON.stringify(payload)
                });

                const result = await response.json();

                if (response.ok) {
                    showResponse('Success âœ“', result, 'success');
                } else {
                    showResponse('Error', result, 'error');
                }
            } catch (error) {
                showResponse('Network Error', error.message, 'error');
            } finally {
                // Reset button state
                sendBtn.disabled = false;
                btnText.classList.remove('d-none');
                btnSpinner.classList.add('d-none');
            }
        }

        function showResponse(title, content, type) {
            const responseBox = document.getElementById('responseBox');
            const responseTitle = document.getElementById('responseTitle');
            const statusBadge = document.getElementById('statusBadge');
            const responseContent = document.getElementById('responseContent');

            responseTitle.textContent = title;
            statusBadge.textContent = type === 'success' ? 'Success' : 'Error';
            statusBadge.className = `badge badge-custom bg-${type === 'success' ? 'success' : 'danger'}`;

            if (typeof content === 'object') {
                responseContent.innerHTML = `<pre>${JSON.stringify(content, null, 2)}</pre>`;
            } else {
                responseContent.innerHTML = `<div class="${type}">${content}</div>`;
            }

            responseBox.classList.add('show');
        }

        // Allow Enter key to send (Ctrl+Enter in textarea)
        document.getElementById('message').addEventListener('keydown', (e) => {
            if (e.key === 'Enter' && e.ctrlKey) {
                sendWebhook();
            }
        });
    </script>
</body>
</html>
