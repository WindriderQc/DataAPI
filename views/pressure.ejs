<%- include('partials/mainHead', { title: 'Live Pressure Data' }) %>

<body>
    <%- include('partials/nav') %>

    <div class="container-fluid pt-5 mt-5">
        <div class="row">
            <div class="col-12">
                <h1 class="text-center">Live Barometric Pressure</h1>
                <p class="text-center">Visualizing the real-time barometric pressure for your location.</p>
                <div style="width: 80%; margin: auto;">
                    <canvas id="pressureChart"></canvas>
                </div>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-md-8 text-center">
                <div id="pressure-info" class="mt-3">
                    <p>Pressure: <span id="pressure">...</span></p>
                    <p>MQTT: <span id="mqtt-status" class="mqtt-status disconnected">Disconnected</span></p>
                </div>
            </div>
        </div>
    </div>

    <%- include('partials/footer') %>

    <!-- Chart.js and MQTT.js from CDN -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://unpkg.com/mqtt/dist/mqtt.min.js"></script>

    <script>
        const mqttConfig = <%- mqttConfig %>;
    </script>
    <script src="/js/Tools.js"></script>
    <script src="/js/pressure.js"></script>
</body>

</html>