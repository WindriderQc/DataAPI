<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('partials/mainHead', { title: 'Storage Scanner Tool' }) %>
    <style>
        .scan-card {
            transition: all 0.3s ease;
        }
        .scan-card:hover {
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }
        .status-badge {
            font-size: 0.9rem;
            padding: 0.5rem 1rem;
        }
        .progress-section {
            min-height: 100px;
        }
        .file-list {
            max-height: 400px;
            overflow-y: auto;
        }
        .scan-form-section {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border-radius: 8px;
            padding: 2rem;
            margin-bottom: 2rem;
        }
        .scan-form-section .form-label {
            color: white;
            font-weight: 500;
        }
        .badge-live {
            animation: pulse 2s infinite;
        }
        @keyframes pulse {
            0%, 100% { opacity: 1; }
            50% { opacity: 0.6; }
        }
    </style>
</head>

<body class="fixed-nav sticky-footer bg-light sidenav-toggled" id="page-top">

<%- include('partials/nav') %>

<div class="content-wrapper">
    <div class="container-fluid pt-4 mt-5">
        
        <!-- Page Header -->
        <div class="row mb-4">
            <div class="col-12">
                <h2><i class="fa fa-hdd"></i> Storage Scanner Tool</h2>
                <p class="text-muted">Scan directories and index files into the database</p>
            </div>
        </div>

        <!-- Scan Configuration -->
        <div class="row mb-4">
            <div class="col-lg-8 mx-auto">
                <div class="scan-form-section">
                    <h4 class="mb-4"><i class="fa fa-cog"></i> Configure New Scan</h4>
                    
                    <div class="mb-3">
                        <label for="scanRoots" class="form-label">Root Directories (one per line)</label>
                        <textarea class="form-control" id="scanRoots" rows="3" placeholder="/path/to/directory&#10;/another/path"></textarea>
                        <div class="form-text text-white-50">Enter the directories you want to scan</div>
                    </div>

                    <div class="mb-3">
                        <label for="scanExtensions" class="form-label">File Extensions (comma-separated)</label>
                        <input type="text" class="form-control" id="scanExtensions" placeholder="jpg,png,mkv,mp4,pdf,doc" value="jpg,png,mkv,mp4,pdf">
                        <div class="form-text text-white-50">Only files with these extensions will be scanned</div>
                    </div>

                    <div class="mb-4">
                        <label for="batchSize" class="form-label">Batch Size</label>
                        <input type="number" class="form-control" id="batchSize" value="1000" min="100" max="10000">
                        <div class="form-text text-white-50">Number of files to process in each database batch</div>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="button" class="btn btn-light btn-lg" id="startScanBtn" onclick="startScan()">
                            <i class="fa fa-play"></i> Start Scan
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Current Scan Status -->
        <div class="row mb-4" id="currentScanSection" style="display: none;">
            <div class="col-lg-8 mx-auto">
                <div class="card scan-card">
                    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                        <h5 class="mb-0"><i class="fa fa-spinner fa-spin"></i> Current Scan</h5>
                        <button class="btn btn-sm btn-danger" id="stopScanBtn" onclick="stopCurrentScan()">
                            <i class="fa fa-stop"></i> Stop
                        </button>
                    </div>
                    <div class="card-body">
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <strong>Scan ID:</strong> <code id="currentScanId"></code>
                            </div>
                            <div class="col-md-6 text-end">
                                <span class="badge bg-info status-badge" id="currentScanStatus">Running</span>
                                <span class="badge bg-success badge-live ms-2" id="currentScanLive" style="display: none;">
                                    <i class="fa fa-circle"></i> Live
                                </span>
                            </div>
                        </div>

                        <div class="progress mb-3" style="height: 30px;">
                            <div class="progress-bar progress-bar-striped progress-bar-animated" 
                                 id="scanProgress" 
                                 role="progressbar" 
                                 style="width: 0%">
                                <span id="progressText">Starting...</span>
                            </div>
                        </div>

                        <div class="row text-center">
                            <div class="col-md-4">
                                <div class="card">
                                    <div class="card-body">
                                        <h3 class="text-primary" id="filesSeen">0</h3>
                                        <small class="text-muted">Files Seen</small>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="card">
                                    <div class="card-body">
                                        <h3 class="text-success" id="filesUpserted">0</h3>
                                        <small class="text-muted">Files Upserted</small>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="card">
                                    <div class="card-body">
                                        <h3 class="text-danger" id="filesErrors">0</h3>
                                        <small class="text-muted">Errors</small>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="mt-3">
                            <small class="text-muted">
                                <strong>Started:</strong> <span id="scanStarted">-</span>
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Recent Scans History -->
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0"><i class="fa fa-history"></i> Recent Scans</h5>
                        <button class="btn btn-sm btn-primary" onclick="loadRecentScans()">
                            <i class="fa fa-refresh"></i> Refresh
                        </button>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover" id="recentScansTable">
                                <thead>
                                    <tr>
                                        <th>Scan ID</th>
                                        <th>Status</th>
                                        <th>Files Seen</th>
                                        <th>Upserts</th>
                                        <th>Errors</th>
                                        <th>Started</th>
                                        <th>Duration</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody id="recentScansBody">
                                    <tr>
                                        <td colspan="8" class="text-center text-muted">
                                            <em>Loading recent scans...</em>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <%- include('partials/footer') %>
</div>

<!-- MDB and dependencies -->
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"></script>
<script src="/js/storage-tool.js"></script>

</body>
</html>
