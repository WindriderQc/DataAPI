<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('partials/mainHead', { title: 'Databases' }) %>
</head>

<body class="fixed-nav sticky-footer bg-light sidenav-toggled" id="page-top">

<%- include('partials/nav') %>

<div class="content-wrapper">
    <div class="container-fluid pt-4">
        <div class="card">
            <div class="card-header">
                <h2>Database Overview</h2>
            </div>
            <div class="card-body">
                <div class="row">
                    <!-- Production Database -->
                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-header bg-primary text-white">
                                Production (<%= prodDbInfo.name %>)
                            </div>
                            <ul class="list-group list-group-flush" id="prod-db-info">
                                <% prodDbInfo.collections.forEach(coll => { %>
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                        <%= coll.name %>
                                        <span class="badge bg-primary rounded-pill"><%= coll.count %></span>
                                    </li>
                                <% }) %>
                            </ul>
                        </div>
                    </div>

                    <!-- Development Database -->
                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-header bg-success text-white">
                                Development (<%= devDbInfo.name %>)
                            </div>
                            <ul class="list-group list-group-flush" id="dev-db-info">
                                <% devDbInfo.collections.forEach(coll => { %>
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                        <%= coll.name %>
                                        <span class="badge bg-success rounded-pill"><%= coll.count %></span>
                                    </li>
                                <% }) %>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="card mt-4">
            <div class="card-header">
                <h3>Actions</h3>
            </div>
            <div class="card-body">
                <button id="copy-prod-to-dev" class="btn btn-warning">Copy Prod to Dev</button>
                <div class="progress mt-3" style="display: none;">
                    <div id="progress-bar" class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" style="width: 0%;" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"></div>
                </div>
                <div id="copy-progress-text" class="mt-2 small text-muted" style="display: none;"></div>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %>
<script src="/js/databases.js"></script>

</body>
</html>