<%
    // Helper function to format bytes into a human-readable string (KB, MB, GB)
    function formatBytes(bytes, decimals = 2) {
        if (bytes === 0) return '0 Bytes';
        const k = 1024;
        const dm = decimals < 0 ? 0 : decimals;
        const sizes = ['Bytes', 'KB', 'MB', 'GB', 'TB', 'PB', 'EB', 'ZB', 'YB'];
        const i = Math.floor(Math.log(bytes) / Math.log(k));
        return parseFloat((bytes / Math.pow(k, i)).toFixed(dm)) + ' ' + sizes[i];
    }

    // Helper function to format numbers with commas
    function formatNumber(num) {
        return num.toString().replace(/(\d)(?=(\d{3})+(?!\d))/g, '$1,');
    }
%>

<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('partials/mainHead', { title: 'Databases' }) %>
    <style>
        .collection-stats {
            font-size: 0.8rem;
            color: #6c757d;
        }
        
        /* Arrow pulse animation */
        @keyframes pulse {
            0%, 100% {
                transform: scale(1);
                opacity: 1;
            }
            50% {
                transform: scale(1.1);
                opacity: 0.8;
            }
        }
        
        /* Responsive: Stack on mobile, arrow points down */
        @media (max-width: 991.98px) {
            .fa-arrow-right {
                transform: rotate(90deg);
            }
        }
        
        /* Add shadow to cards */
        .card.shadow-sm {
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
        }
        
        /* Progress bar percentage text */
        .progress-bar span {
            position: absolute;
            width: 100%;
            text-align: center;
            color: #fff;
        }
    </style>
</head>

<body class="fixed-nav sticky-footer bg-light sidenav-toggled" id="page-top">

<%- include('partials/nav') %>

<div class="content-wrapper">
    <div class="container-fluid pt-4 mt-5 ">
        <div class="card">
            <div class="card-header">
                <h2>Database Overview</h2>
            </div>
            <div class="card-body">
                <div class="row align-items-center">
                    <!-- Production Database -->
                    <div class="col-lg-5">
                        <div class="card shadow-sm">
                            <div class="card-header bg-primary text-white">
                                <i class="fa fa-database me-2"></i>Production (<%= prodDbInfo.name %>)
                            </div>
                            <ul class="list-group list-group-flush" id="prod-db-info">
                                <% prodDbInfo.collections.forEach(coll => { %>
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                        <div>
                                            <%= coll.name %>
                                            <div class="collection-stats">
                                                Size: <%= formatBytes(coll.size) %> | Storage: <%= formatBytes(coll.storageSize) %>
                                            </div>
                                        </div>
                                        <span class="badge bg-primary rounded-pill"><%= formatNumber(coll.count) %></span>
                                    </li>
                                <% }) %>
                            </ul>
                        </div>
                    </div>

                    <!-- Copy Action in the Middle -->
                    <div class="col-lg-2 text-center my-4">
                        <div class="d-flex flex-column align-items-center justify-content-center" style="min-height: 200px;">
                            <!-- Arrow pointing right -->
                            <div class="mb-3">
                                <i class="fa fa-arrow-right fa-3x text-warning" style="animation: pulse 2s infinite;"></i>
                            </div>
                            
                            <!-- Copy Button -->
                            <button id="copy-prod-to-dev" class="btn btn-warning btn-lg shadow mb-3">
                                <i class="fa fa-copy me-2"></i>Copy
                            </button>
                            
                            <small class="text-muted">Prod â†’ Dev</small>
                        </div>
                        
                        <!-- Progress Section -->
                        <div class="mt-3">
                            <div class="progress" style="display: none; height: 25px;">
                                <div id="progress-bar" 
                                     class="progress-bar progress-bar-striped progress-bar-animated bg-warning" 
                                     role="progressbar" 
                                     style="width: 0%;" 
                                     aria-valuenow="0" 
                                     aria-valuemin="0" 
                                     aria-valuemax="100">
                                    <span class="fw-bold">0%</span>
                                </div>
                            </div>
                            <div id="copy-progress-text" class="mt-2 small text-muted text-center" style="display: none;"></div>
                        </div>
                    </div>

                    <!-- Development Database -->
                    <div class="col-lg-5">
                        <div class="card shadow-sm">
                            <div class="card-header bg-success text-white">
                                <i class="fa fa-database me-2"></i>Development (<%= devDbInfo.name %>)
                            </div>
                            <ul class="list-group list-group-flush" id="dev-db-info">
                                <% devDbInfo.collections.forEach(coll => { %>
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                        <div>
                                            <%= coll.name %>
                                            <div class="collection-stats">
                                                Size: <%= formatBytes(coll.size) %> | Storage: <%= formatBytes(coll.storageSize) %>
                                            </div>
                                        </div>
                                        <span class="badge bg-success rounded-pill"><%= formatNumber(coll.count) %></span>
                                    </li>
                                <% }) %>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="card mt-4">
            <div class="card-header">
                <h3>Item Viewer</h3>
            </div>
            <div class="card-body">
                <!-- Form with proper Bootstrap grid layout -->
                <form id="viewer-form" class="mb-4">
                    <div class="row g-2 align-items-end">
                        <!-- Collection Select -->
                        <div class="col-md-3">
                            <label for="collection_select" class="form-label">Collection</label>
                            <select class="form-select" id="collection_select">
                                <option value="">Select collection...</option>
                            </select>
                        </div>
                        
                        <!-- Skip Input -->
                        <div class="col-md-2">
                            <label for="skip_id" class="form-label">Skip</label>
                            <input type='number' class="form-control" id='skip_id' name="skip" value="0" min="0">
                        </div>
                        
                        <!-- Limit Input -->
                        <div class="col-md-2">
                            <label for="limit_id" class="form-label">Limit</label>
                            <input type='number' class="form-control" id='limit_id' name="limit" value="10" min="1" max="100">
                        </div>
                        
                        <!-- Sort Input -->
                        <div class="col-md-2">
                            <label for="sort_id" class="form-label">Sort</label>
                            <select class="form-select" id="sort_id" name="sort">
                                <option value="desc">Newest First</option>
                                <option value="asc">Oldest First</option>
                            </select>
                        </div>
                        
                        <!-- Submit Button -->
                        <div class="col-md-3">
                            <button type="button" class="btn btn-primary w-100" id="send_request_btn">
                                <i class="fa fa-search me-1"></i> Fetch Data
                            </button>
                        </div>
                    </div>
                </form>

                <!-- Error Message -->
                <div class="error-message alert alert-danger" style="display: none;" role="alert"></div>

                <!-- Results Section with spacing -->
                <div class="mt-4 pt-3 border-top">
                    <div class="boots"></div>
                    <div class="button-container text-center my-3">
                        <p id="loadMore" class="text-muted">Loading...</p>
                    </div>
                    <div class="loading text-center" style="display: none;">
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

